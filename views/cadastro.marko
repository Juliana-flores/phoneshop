<!DOCTYPE html>
<html lang="pt-br">
<head>
    <include ('./includes/head.marko')> </include>

    <link rel="stylesheet" href="/public/stylesheets/cadastro.css">
	
</head>
<body>
    <include ('./includes/header.marko')> </include>

    <section class='login-style'>

        <form action="/cadastro" method="post" class="formulario">
            <if(data.errors)>
                <for(error in data.errors)>
                    ${error} <br/>
                </for>
            </if>
            <h1>
                Login
            </h1>
            <div class="card">
                <div class="inserir">
                    <label for="nome">
                        <span>Nome completo</span>
                    </label>
                    <input type="text" id='name' name="nome" placeholder="Digite seu nome" required>
                </div>
                <div class="inserir">
                    <label for="email">
                        <span>Email</span> 
                    </label>
                    <input type="email" id='email' name="email" placeholder="Digite seu email" required>
                </div>
                <div class="inserir">
                    <label for='cemail'>
                        <span>Confirme seu email</span> 
                    </label>
                    <input type="email" id='cemail' name="cemail" placeholder="Digite seu email" required>
                </div>
                <div class="inserir">
                    <label for="senha">
                        <span>Crie sua Senha</span>
                    </label>
                    <input type="password" id="password" name="senha" placeholder="Digite sua senha">
                </div>
                <div class="inserir">
                     <button type="submit" value="sign up">Criar conta</button>
                </div>
            </div>         
        </form>
    </section>

    <include ('./includes/footer.marko')> </include>
</body>
</html>
