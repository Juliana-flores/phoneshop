<!DOCTYPE html>
<html lang="pt-br">
<head>
    <include ('./includes/head.marko')> </include>

    <link rel="stylesheet" href="/public/stylesheets/contato.css">
</head>
<body>
    <include ('./includes/header.marko')> </include>

    <section class='login-style'>
        <form action="/contato" method="post" class="formulario">
            <h1>
                Login
            </h1>
            <div class="card">
                <div class="inserir">
                    <label>
                        <p>Nome</p>
                    </label>
                    <input type="text" name="name" id="name" placeholder="Digite seu nome" required>
                </div>
                <div class="inserir">
                    <label>
                        <p>Email</p> 
                    </label>
                    <input type="email" name="email" id="email" placeholder="Digite seu email" required>
                </div>
                <div class="inserir">
                    <label>
                        <p>Telefone</p>
                    </label>
                    <input type="text" name="phone" id="phone" placeholder="Digite seu telefone">
                </div>
                <div class="inserir">
                    <label>
                        <p>Mensagem</p>
                    </label>
                    <textarea name="message"  id="message" cols="44" rows="5" placeholder="Deixe sua mensagem" required></textarea>
                </div>
                <div class="inserir">
                     <button type="submit">Enviar</button>
                </div>
            </div>         
        </form>
    </section>

    <include ('./includes/footer.marko')> </include>
</body>
</html>